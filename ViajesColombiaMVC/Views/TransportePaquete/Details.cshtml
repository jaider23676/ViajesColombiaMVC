<!-- Views/TransportePaquete/Details.cshtml -->
@model ViajesColombiaMVC.Models.TransportePaquete

@{
    ViewData["Title"] = "Detalles del Transporte";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-info-circle"></i> @ViewData["Title"]
                    </h4>
                    <div>
                        <span class="badge @(Model.Fecha.Date >= DateTime.Now.Date ? "badge-success" : "badge-secondary")">
                            @(Model.Fecha.Date >= DateTime.Now.Date ? "PRÓXIMO" : "COMPLETADO")
                        </span>
                    </div>
                </div>

                <div class="card-body">
                    <div class="row">
                        <!-- Información del Transporte -->
                        <div class="col-md-6">
                            <h5 class="border-bottom pb-2">
                                <i class="fas fa-shipping-fast text-primary"></i> Información del Transporte
                            </h5>
                            <dl class="row">
                                <dt class="col-sm-5">Fecha y Hora:</dt>
                                <dd class="col-sm-7">
                                    <strong>@Model.Fecha.ToString("dddd, dd MMMM yyyy")</strong><br />
                                    <span class="text-muted">@Model.Fecha.ToString("hh:mm tt")</span>
                                </dd>

                                <dt class="col-sm-5">Actividad:</dt>
                                <dd class="col-sm-7">@Model.Actividad</dd>

                                <dt class="col-sm-5">Registro ID:</dt>
                                <dd class="col-sm-7"><span class="badge badge-light">#@Model.Id</span></dd>
                            </dl>
                        </div>

                        <!-- Información del Conductor -->
                        <div class="col-md-6">
                            <h5 class="border-bottom pb-2">
                                <i class="fas fa-user-tie text-success"></i> Información del Conductor
                            </h5>
                            @if (Model.Conductor != null)
                            {
                                <dl class="row">
                                    <dt class="col-sm-5">Nombre:</dt>
                                    <dd class="col-sm-7"><strong>@Model.Conductor.Nombre</strong></dd>

                                    <dt class="col-sm-5">Licencia:</dt>
                                    <dd class="col-sm-7">@Model.Conductor.Licencia</dd>

                                    <dt class="col-sm-5">Especialidad:</dt>
                                    <dd class="col-sm-7">@Model.Conductor.Especialidad</dd>

                                    <dt class="col-sm-5">Zona:</dt>
                                    <dd class="col-sm-7">@Model.Conductor.Zona</dd>

                                    <dt class="col-sm-5">Teléfono:</dt>
                                    <dd class="col-sm-7">
                                        <a href="tel:@Model.Conductor.Telefono" class="text-decoration-none">
                                            <i class="fas fa-phone"></i> @Model.Conductor.Telefono
                                        </a>
                                    </dd>

                                    <dt class="col-sm-5">Email:</dt>
                                    <dd class="col-sm-7">
                                        <a href="mailto:@Model.Conductor.Correo" class="text-decoration-none">
                                            <i class="fas fa-envelope"></i> @Model.Conductor.Correo
                                        </a>
                                    </dd>
                                </dl>
                            }
                            else
                            {
                                <div class="alert alert-warning">
                                    <i class="fas fa-exclamation-triangle"></i> Conductor no encontrado
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Información del Paquete -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <h5 class="border-bottom pb-2">
                                <i class="fas fa-box-open text-warning"></i> Información del Paquete
                            </h5>
                            @if (Model.Paquete != null)
                            {
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h5 class="card-title">@Model.Paquete.Nombre</h5>
                                        <p class="card-text">ID: @Model.PaqueteId</p>
                                        <a href="@Url.Action("Details", "PaqueteTuristico", new { id = Model.PaqueteId })"
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-external-link-alt"></i> Ver Paquete Completo
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="card-footer text-center">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a asp-action="Index" asp-route-paqueteId="@Model.PaqueteId" class="btn btn-secondary">
                        <i class="fas fa-list"></i> Volver al Listado
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Eliminar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>