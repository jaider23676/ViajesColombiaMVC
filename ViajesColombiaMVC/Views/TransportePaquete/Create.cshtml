<!-- Views/TransportePaquete/Create.cshtml -->
@model ViajesColombiaMVC.Models.TransportePaquete

@{
    ViewData["Title"] = "Asignar Transporte";
    var paqueteId = ViewBag.PaqueteId as int?;
    var paqueteNombre = ViewBag.PaqueteNombre as string;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-truck-loading"></i> @ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(paqueteNombre))
                    {
                        <div class="alert alert-info">
                            <h5><i class="fas fa-box"></i> @paqueteNombre</h5>
                        </div>
                    }

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <input type="hidden" asp-for="PaqueteId" />

                        <div class="form-group">
                            <label asp-for="ConductorId" class="control-label font-weight-bold">
                                <i class="fas fa-user-tie"></i> Conductor *
                            </label>
                            <select asp-for="ConductorId" class="form-control select2"
                                    asp-items="@(new SelectList(ViewBag.ConductoresList, "Value", "Text"))">
                                <option value="">-- Seleccionar Conductor --</option>
                            </select>
                            <span asp-validation-for="ConductorId" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Fecha" class="control-label font-weight-bold">
                                        <i class="fas fa-calendar-day"></i> Fecha y Hora *
                                    </label>
                                    <input asp-for="Fecha" class="form-control"
                                           type="datetime-local"
                                           value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                                    <span asp-validation-for="Fecha" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Actividad" class="control-label font-weight-bold">
                                <i class="fas fa-tasks"></i> Actividad / Descripción *
                            </label>
                            <textarea asp-for="Actividad" class="form-control" rows="4"
                                      placeholder="Describa la actividad del transporte..."></textarea>
                            <small class="form-text text-muted">Máximo 200 caracteres</small>
                            <span asp-validation-for="Actividad" class="text-danger small"></span>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-check-circle"></i> Guardar Asignación
                            </button>
                            <a asp-action="Index" asp-route-paqueteId="@paqueteId"
                               class="btn btn-secondary btn-lg">
                                <i class="fas fa-times-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-muted">
                    <small><i class="fas fa-info-circle"></i> Los campos marcados con * son obligatorios</small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            $('.select2').select2({
                placeholder: "Seleccione un conductor",
                allowClear: true,
                width: '100%'
            });

            // Validación de fecha
            $('#Fecha').on('change', function() {
                var selectedDate = new Date(this.value);
                var today = new Date();
                today.setHours(0, 0, 0, 0);

                if (selectedDate < today) {
                    alert('No puede seleccionar una fecha pasada');
                    this.value = '';
                }
            });
        });
    </script>
}