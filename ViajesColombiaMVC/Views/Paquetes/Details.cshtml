@model PaqueteTuristico
@{
    ViewData["Title"] = "Detalles del paquete";
}

<div class="container mt-4">

    <div class="row">

        <!-- Imagen principal -->
        <div class="col-md-6">
            <img src="~/images/paquetes/@Model.Imagen" 

                 alt="Imagen del paquete"
                 class="img-fluid rounded shadow-sm" />
        </div>

        <!-- Información -->
        <div class="col-md-6">
            <h2 class="fw-bold">@Model.Nombre</h2>
            <p class="text-muted">@Model.Descripcion</p>

            <h4 class="text-primary fw-bold">$@Model.Precio.ToString("N0")</h4>

            <p class="mt-3">
                <i class="bi bi-calendar"></i>
                <strong>@Model.FechaInicio?.ToString("dd MMM yyyy")</strong>
                —
                <strong>@Model.FechaFin?.ToString("dd MMM yyyy")</strong>
            </p>

            <p>
                <i class="bi bi-people"></i> Cupo disponible:
                <strong>@Model.Cupo</strong>
            </p>

            <a href="/Reservas/Create?paqueteId=@Model.Id" class="btn btn-success w-100 btn-lg mt-3">
                Reservar ahora
            </a>
        </div>

    </div>


    <!-- ================== ITINERARIO ==================== -->
    <div class="mt-5">
        <h3 class="fw-bold mb-3">Itinerario del viaje</h3>

        <!-- Botón agregar itinerario -->
        <a href="/Itinerarios/Create?paqueteId=@Model.Id" class="btn btn-primary mb-3">
            + Agregar Itinerario
        </a>

        @if (Model.Itinerarios == null || !Model.Itinerarios.Any())
        {
            <div class="alert alert-warning">Este paquete aún no tiene itinerarios registrados.</div>
        }
        else
        {
            <div class="timeline">

                @foreach (var item in Model.Itinerarios.OrderBy(i => i.Dia))
                {
                    <div class="timeline-item mb-4 p-3 border rounded shadow-sm bg-white">
                        <h5 class="fw-bold">Día @item.Dia: @item.Titulo</h5>
                        <p>@item.Descripcion</p>

                        @if (item.HoraInicio != null)
                        {
                            <span class="badge bg-primary">
                                @item.HoraInicio?.ToString(@"hh\:mm") —
                                @item.HoraFin?.ToString(@"hh\:mm")
                            </span>
                        }
                    </div>
                }

            </div>
        }
    </div>

</div>

<style>
    .timeline-item {
        border-left: 4px solid #0d6efd;
        padding-left: 15px;
    }
</style>
