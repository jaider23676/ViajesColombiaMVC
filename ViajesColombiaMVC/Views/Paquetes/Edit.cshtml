@model ViajesColombiaMVC.Models.PaqueteTuristico

@{
    ViewData["Title"] = "Editar Paquete";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaInicio"></label>
        <input asp-for="FechaInicio" type="date" class="form-control" />
        <span asp-validation-for="FechaInicio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaFin"></label>
        <input asp-for="FechaFin" type="date" class="form-control" />
        <span asp-validation-for="FechaFin" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cupo"></label>
        <input asp-for="Cupo" class="form-control" />
        <span asp-validation-for="Cupo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DestinoId">Destino</label>
        <select asp-for="DestinoId" class="form-control" asp-items="@(ViewData["Destinos"] as SelectList)">
            <option value="">-- Seleccione un destino --</option>
        </select>
        <span asp-validation-for="DestinoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Imagen"></label>
        <input asp-for="Imagen" class="form-control" />
        <span asp-validation-for="Imagen" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
