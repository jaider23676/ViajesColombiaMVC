@model ViajesColombiaMVC.Models.Destino
@{
    ViewData["Title"] = "Detalles del Destino";
}

<div class="container mt-4">

    <div class="card shadow-lg border-0 mb-4">
        <img src="~/images/@Model.Imagen"
             class="card-img-top"
             style="height:350px; object-fit:cover;" />

        <div class="card-body">

            <h2 class="fw-bold">@Model.Nombre</h2>
            <h5 class="text-muted">@Model.Ubicacion</h5>

            <p class="mt-3">@Model.Descripcion</p>

        </div>
    </div>

    <h3 class="fw-bold mb-3">Paquetes Disponibles en este Destino</h3>

    @if (Model.Paquetes != null && Model.Paquetes.Any())
    {
        <div class="row">
            @foreach (var p in Model.Paquetes)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow border-0 h-100">

                        <img src="~/images/@p.Imagen"
                             class="card-img-top"
                             style="height:200px; object-fit:cover;" />

                        <div class="card-body">

                            <h5 class="card-title">@p.Nombre</h5>

                            <p class="card-text text-muted">
                                @p.Descripcion
                            </p>

                            <p class="fw-bold text-primary">
                                $@p.Precio.ToString("N0")
                            </p>

                            <a href="@Url.Action("Details", "Paquetes", new { id = p.Id })"
                               class="btn btn-outline-primary w-100">
                                Ver Paquete
                            </a>

                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning">No hay paquetes disponibles para este destino.</div>
    }
</div>
