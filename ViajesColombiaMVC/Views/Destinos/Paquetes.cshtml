@model ViajesColombiaMVC.Models.Destino

@{
    ViewData["Title"] = "Paquetes de " + Model.Nombre;
}

<h2>Paquetes en @Model.Nombre</h2>

@if (!Model.Paquetes.Any())
{
    <div class="alert alert-warning">No hay paquetes disponibles para este destino.</div>
}
else
{
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var paquete in Model.Paquetes)
            {
                <tr>
                    <td>@paquete.Nombre</td>
                    <td>@paquete.Descripcion</td>
                    <td>@paquete.Precio.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}
