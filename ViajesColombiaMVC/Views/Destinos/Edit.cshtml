@model ViajesColombiaMVC.Models.Destino

@{
    ViewData["Title"] = "Editar Destino";
}

<h2>Editar Destino</h2>

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Ubicacion" class="form-label"></label>
        <input asp-for="Ubicacion" class="form-control" />
        <span asp-validation-for="Ubicacion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Imagen Actual</label><br />
        @if (!string.IsNullOrEmpty(Model.Imagen))
        {
            <img src="~/images/@Model.Imagen" alt="@Model.Nombre" style="width:150px;" />
        }
        else
        {
            <span class="text-muted">Sin imagen</span>
        }
    </div>

    <div class="mb-3">
        <label asp-for="ImagenFile" class="form-label">Cambiar Imagen</label>
        <input asp-for="ImagenFile" type="file" class="form-control" />
        <span asp-validation-for="ImagenFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
