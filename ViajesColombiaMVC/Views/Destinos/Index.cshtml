@model IEnumerable<ViajesColombiaMVC.Models.Destino>

@{
    ViewData["Title"] = "Destinos";
}

<style>
    .destinos-fondo {
        background-color: #121212;
        min-height: 80vh;
        padding: 40px 20px;
        font-family: 'Poppins', sans-serif;
        color: #f8f1e7;
    }

        .destinos-fondo h2 {
            color: #ff7f50;
            text-shadow: 0 0 8px #ff7f50;
            margin-bottom: 30px;
        }

    .btn-success {
        background-color: #ff7f50;
        border-color: #ff7f50;
        color: #121212;
        transition: all 0.3s ease;
    }

        .btn-success:hover {
            background-color: #ffa46b;
            border-color: #ffa46b;
        }

    .btn-primary {
        background-color: #ffb347;
        border-color: #ffb347;
        color: #121212;
    }

        .btn-primary:hover {
            background-color: #ffc77f;
            border-color: #ffc77f;
        }

    .btn-danger {
        background-color: #ff3b3b;
        border-color: #ff3b3b;
        color: #121212;
    }

        .btn-danger:hover {
            background-color: #ff5c5c;
            border-color: #ff5c5c;
        }

    .btn-info {
        background-color: #1e90ff;
        border-color: #1e90ff;
        color: #fff;
    }

        .btn-info:hover {
            background-color: #3aa0ff;
            border-color: #3aa0ff;
        }

    table {
        background: rgba(0,0,0,0.65);
        border-radius: 12px;
        overflow: hidden;
        color: #f8f1e7;
    }

    thead {
        background-color: #1f1f1f;
        color: #ff7f50;
    }

    tbody tr {
        background: rgba(0,0,0,0.55);
        transition: all 0.2s ease;
    }

        tbody tr:hover {
            background: rgba(255,127,80,0.2);
            transform: translateY(-2px);
        }

    img {
        border-radius: 8px;
    }

    .alert-warning {
        background-color: rgba(255,165,0,0.2);
        color: #ff7f50;
        border: 1px solid #ff7f50;
    }
</style>

<div class="destinos-fondo container">

    <h2 class="fw-bold">Panel de Destinos</h2>

    <a class="btn btn-success mb-3" href="@Url.Action("Create")">
        + Agregar Destino
    </a>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">Aún no hay destinos registrados.</div>
    }
    else
    {
        <table class="table table-bordered table-striped shadow-sm">
            <thead>
                <tr>
                    <th>Imagen</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Ubicación</th>
                    <th>Paquetes</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var destino in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(destino.Imagen))
                            {
                                <img src="~/images/@destino.Imagen" alt="@destino.Nombre" style="width:80px; height:auto;" />
                            }
                            else
                            {
                                <span class="text-muted">Sin imagen</span>
                            }
                        </td>
                        <td>@destino.Nombre</td>
                        <td>@destino.Descripcion</td>
                        <td>@destino.Ubicacion</td>
                        <td>
                            <a class="btn btn-info btn-sm" href="@Url.Action("Paquetes", new { id = destino.Id })">
                                Ver Paquetes (@destino.Paquetes?.Count ?? 0)
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", new { id = destino.Id })">Editar</a>
                            <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = destino.Id })">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
