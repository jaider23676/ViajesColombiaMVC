@model ViajesColombiaMVC.Models.Pago

@{
    ViewData["Title"] = "Eliminar Pago";
}

<h2>Eliminar Pago</h2>

<div class="alert alert-danger">
    ¿Seguro que deseas eliminar este pago?
</div>

<div class="card p-4">
    <p><strong>Monto:</strong> $@Model.Monto</p>
    <p><strong>Fecha:</strong> @Model.FechaPago.ToString("yyyy-MM-dd HH:mm")</p>
    <p><strong>Forma de Pago:</strong> @Model.FormaPago?.Nombre</p>
    <p><strong>Estado:</strong> @Model.Estado</p>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a class="btn btn-secondary" href="/Pagos/Index?reservaId=@Model.ReservaId">Cancelar</a>
</form>
