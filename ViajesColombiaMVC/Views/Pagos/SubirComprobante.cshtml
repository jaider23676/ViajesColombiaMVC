@model ViajesColombiaMVC.Models.Comprobante

@{
    ViewData["Title"] = "Subir Comprobante";
}

<h2 class="mb-4">Subir Comprobante</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
    </div>
}

<form asp-action="SubirComprobante" method="post" enctype="multipart/form-data" class="card p-4 shadow-sm border-0">
    <input type="hidden" asp-for="PagoId" />

    <div class="mb-3">
        <label class="form-label">Archivo</label>
        <input type="file" name="archivo" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="bi bi-upload"></i> Subir
    </button>
</form>
