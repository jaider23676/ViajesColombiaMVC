@model IEnumerable<ViajesColombiaMVC.Models.Contrato>

<h2>Contratos del proveedor: @ViewBag.ProveedorNombre</h2>

<a href="@Url.Action("Create", "Contratos", new { proveedorId = ViewBag.ProveedorId })"
   class="btn btn-primary mb-3">Nuevo Contrato</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Descripción</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Valor</th>
            <th>Archivo PDF</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Descripcion</td>
                <td>@item.FechaInicio.ToShortDateString()</td>
                <td>@item.FechaFin.ToShortDateString()</td>
                <td>@item.Valor.ToString("C")</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ArchivoPdf))
                    {
                        <a href="@item.ArchivoPdf" target="_blank">Ver PDF</a>
                    }
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Contratos", new { id = item.Id })" class="btn btn-warning btn-sm">Editar</a>
                    <a href="@Url.Action("Delete", "Contratos", new { id = item.Id })" class="btn btn-danger btn-sm"
                       onclick="return confirm('¿Eliminar este contrato?');">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
