@model IEnumerable<ViajesColombiaMVC.Models.Comprobante>

@{
    ViewData["Title"] = "Comprobantes de Pago";
}

<h2>Comprobantes</h2>

<a class="btn btn-primary mb-3" href="/Comprobantes/Upload?pagoId=@ViewBag.PagoId">
    Subir nuevo comprobante
</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Archivo</th>
            <th>Fecha</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>
                    <a href="/comprobantes/@item.Archivo" target="_blank">
                        @item.Archivo
                    </a>
                </td>
                <td>@item.CreadoEn</td>
                <td>
                    <a class="btn btn-danger btn-sm"
                       href="/Comprobantes/Delete/@item.Id?pagoId=@item.PagoId">
                        Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
