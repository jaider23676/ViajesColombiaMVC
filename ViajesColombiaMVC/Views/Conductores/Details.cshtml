@model ViajesColombiaMVC.Models.Conductor

<h2>Detalles del Conductor</h2>

<div class="card p-3">
    <p><strong>Nombre:</strong> @Model.Nombre</p>
    <p><strong>Licencia:</strong> @Model.Licencia</p>
    <p><strong>Zona:</strong> @Model.Zona</p>
    <p><strong>Especialidad:</strong> @Model.Especialidad</p>
    <p><strong>Teléfono:</strong> @Model.Telefono</p>
    <p><strong>Correo:</strong> @Model.Correo</p>
</div>

<a href="@Url.Action("Index")" class="btn btn-secondary mt-3">Volver</a>
