@model ViajesColombiaMVC.Models.Conductor

@{
    ViewData["Title"] = "Agregar Conductor";
}

<h2>Agregar Conductor</h2>

<form asp-action="Create" method="post">

    <div class="form-group mb-3">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Licencia</label>
        <input asp-for="Licencia" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Zona</label>
        <input asp-for="Zona" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Especialidad</label>
        <input asp-for="Especialidad" class="form-control" placeholder="VIP, Familiar, Tours..." />
    </div>

    <div class="form-group mb-3">
        <label>Teléfono</label>
        <input asp-for="Telefono" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Correo</label>
        <input asp-for="Correo" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
