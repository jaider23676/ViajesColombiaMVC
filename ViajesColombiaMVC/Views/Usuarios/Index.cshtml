@model IEnumerable<ViajesColombiaMVC.Models.Usuario>

@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<style>
    /* Fondo oscuro */
    .usuarios-fondo {
        background: #121212;
        min-height: 90vh;
        padding: 40px 20px;
        color: #f8f1e7;
        font-family: 'Poppins', sans-serif;
    }

        /* Título */
        .usuarios-fondo h2 {
            color: #ff7f50;
            text-shadow: 0 0 8px #ff7f50;
        }

    /* Tabla personalizada */
    .usuarios-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        background: rgba(0,0,0,0.6);
        backdrop-filter: blur(6px);
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(255,140,0,0.3);
    }

        .usuarios-table th {
            background: rgba(255,127,80,0.85);
            color: #121212;
            font-weight: 600;
            text-align: center;
            padding: 12px;
        }

        .usuarios-table td {
            text-align: center;
            padding: 12px;
            border-bottom: 1px solid rgba(255,140,0,0.3);
            color: #f8f1e7;
        }

        .usuarios-table tr:hover td {
            background: rgba(255,140,0,0.15);
        }

    /* Botones */
    .btn-primary {
        background: linear-gradient(45deg, #ff7f50, #ff4500);
        border: none;
        color: white;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(45deg, #ff4500, #ff7f50);
            box-shadow: 0 0 10px #ff7f50;
        }

    .btn-warning {
        background: #ff7f50;
        border: none;
        color: #121212;
        font-weight: 500;
    }

        .btn-warning:hover {
            background: #ff4500;
            color: white;
            box-shadow: 0 0 8px #ff7f50;
        }

    .btn-danger {
        background: #ff3b3b;
        border: none;
        color: white;
        font-weight: 500;
    }

        .btn-danger:hover {
            background: #ff1a1a;
            box-shadow: 0 0 8px #ff7f50;
        }

    /* Botón Nuevo Usuario */
    .btn-nuevo {
        margin-bottom: 20px;
        background: linear-gradient(45deg, #ff7f50, #ff4500);
        color: white;
        font-weight: 500;
    }

        .btn-nuevo:hover {
            background: linear-gradient(45deg, #ff4500, #ff7f50);
            box-shadow: 0 0 12px #ff7f50;
        }
</style>

<div class="usuarios-fondo container mt-4">
    <h2 class="mb-3">Gestión de Usuarios</h2>
    <a asp-action="Create" class="btn btn-nuevo mb-3">
        <i class="bi bi-person-plus"></i> Nuevo Usuario
    </a>

    <table class="usuarios-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Rol</th>
                <th>Teléfono</th>
                <th>Dirección</th>
                <th>Fecha Registro</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.Id</td>
                    <td>@usuario.Nombre</td>
                    <td>@usuario.Correo</td>
                    <td>@usuario.Rol?.Nombre</td>
                    <td>@usuario.Telefono</td>
                    <td>@usuario.Direccion</td>
                    <td>@usuario.FechaRegistro.ToShortDateString()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@usuario.Id" class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@usuario.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
