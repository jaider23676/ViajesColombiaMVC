@model ViajesColombiaMVC.Models.CalificacionConductor

@{
    ViewData["Title"] = "Calificar Conductor";
}

<div class="container py-4">

    <h2 class="fw-bold text-primary mb-3">
        <i class="bi bi-star-half"></i>
        Calificar Conductor: @ViewBag.Conductor.Nombre
    </h2>

    <form asp-action="Calificar" method="post" class="card shadow-lg p-4">

        <input type="hidden" asp-for="ConductorId" value="@ViewBag.Conductor.Id" />
        <input type="hidden" asp-for="UsuarioId" value="@ViewBag.UsuarioId" />

        <div class="mb-3">
            <label><strong>Puntaje (1-5)</strong></label>
            <input asp-for="Puntaje" type="number" class="form-control" min="1" max="5" />
        </div>

        <div class="mb-3">
            <label><strong>Comentario</strong></label>
            <textarea asp-for="Comentario" class="form-control" rows="3"></textarea>
        </div>

        <button class="btn btn-primary w-100">
            <i class="bi bi-check-circle"></i> Guardar Calificación
        </button>

    </form>
</div>
