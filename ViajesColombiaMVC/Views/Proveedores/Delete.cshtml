@model ViajesColombiaMVC.Models.Proveedor

@{
    ViewData["Title"] = "Eliminar Proveedor";
}

<h2 class="text-danger mt-3">Eliminar Proveedor</h2>

<p>¿Está seguro de eliminar este proveedor?</p>

<div class="border p-3 rounded mb-3">
    <p><strong>Nombre:</strong> @Model.Nombre</p>
    <p><strong>Tipo:</strong> @Model.Tipo</p>
    <p><strong>Teléfono:</strong> @Model.Telefono</p>
    <p><strong>Correo:</strong> @Model.Correo</p>
    <p><strong>Dirección:</strong> @Model.Direccion</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
