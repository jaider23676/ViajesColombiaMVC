@model ViajesColombiaMVC.Models.PaqueteTuristico

@{
    ViewData["Title"] = "Detalle del Paquete";
}

<h2 class="mb-4">Detalles del Paquete Turístico</h2>

<div class="card shadow-sm p-4">
    <div class="row">
        <div class="col-md-6">
            <h3 class="fw-bold">@Model.Nombre</h3>
            <p class="text-muted">@Model.Descripcion</p>

            <p><strong>Precio:</strong> $@Model.Precio</p>
            <p><strong>Cupo:</strong> @Model.Cupo personas</p>
            <p><strong>Fecha inicio:</strong> @Model.FechaInicio?.ToString("dd/MM/yyyy")</p>
            <p><strong>Fecha fin:</strong> @Model.FechaFin?.ToString("dd/MM/yyyy")</p>

            <p><strong>Destino:</strong> @Model.Destino?.Nombre</p>

            <a href="/Paquetes/Index" class="btn btn-secondary mt-3">Volver</a>
        </div>

        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.Imagen))
            {
                <img src="@Model.Imagen" class="img-fluid rounded shadow" />
            }
            else
            {
                <div class="alert alert-warning">No hay imagen disponible.</div>
            }
        </div>
    </div>
</div>


<hr class="my-5" />

<!-- ============================= -->
<!--        ITINERARIO             -->
<!-- ============================= -->
<div class="d-flex justify-content-between align-items-center">
    <h3 class="fw-bold">Itinerario del Viaje</h3>

    <a class="btn btn-primary"
       href="/Itinerarios/Create?paqueteId=@Model.Id">
        + Agregar itinerario
    </a>
</div>

<br />

@if (Model.Itinerarios == null || !Model.Itinerarios.Any())
{
    <div class="alert alert-warning">
        Este paquete aún no tiene itinerarios registrados.
    </div>
}
else
{
    <div class="list-group">
        @foreach (var item in Model.Itinerarios.OrderBy(i => i.Dia))
        {
            <div class="list-group-item mb-3 border rounded shadow-sm">

                <h4 class="fw-bold">Día @item.Dia — @item.Titulo</h4>

                <p>@item.Descripcion</p>

                @if (item.HoraInicio != null && item.HoraFin != null)
                {
                    <p><strong>Horario:</strong> @item.HoraInicio - @item.HoraFin</p>
                }

                <a href="/Itinerarios/Delete/@item.Id"
                   class="btn btn-sm btn-danger mt-2">
                    Eliminar
                </a>
            </div>
        }
    </div>
}
